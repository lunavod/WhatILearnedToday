{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "CLIENT_BUILD": true,
    "SERVER_BUILD": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:css-modules/recommended",
    "plugin:lodash/recommended",
    "plugin:import/warnings",
    "plugin:promise/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
    "modules": true,
    "experimentalObjectRestSpread": true,
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["babel", "react", "css-modules", "lodash", "promise"],
  "rules": {
    "no-undef": "warn",
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-console": "off",
    "max-len": [2, 120],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "lodash/import-scope": [2, "member"]
  },
  "parser": "babel-eslint",
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": ["node_modules", "src"]
    },
    "react": {
      "version": "16"
    }
  }
}
